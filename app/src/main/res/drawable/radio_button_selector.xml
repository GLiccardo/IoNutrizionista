<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- RadioButton checked -->
    <item android:state_checked="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <size
                android:height="15dp"
                android:width="15dp" />

            <gradient
                android:startColor="@color/blu"
                android:endColor="@color/bianco"
                android:type="radial"
                android:gradientRadius="50%"
                />

            <stroke
                android:width="1dp"
                android:color="#ff008fc2" />

        </shape>
    </item>

    <!-- RadioButton unchecked -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <size
                android:height="15dp"
                android:width="15dp" />

            <gradient
                android:startColor="@color/bianco"
                android:endColor="@color/blu"
                android:type="radial"
                android:gradientRadius="180%"
                />

            <stroke
                android:width="1dp"
                android:color="#ff008fc2" />

        </shape>
    </item>

</selector>

