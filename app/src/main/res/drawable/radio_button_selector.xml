<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- RadioButton checked -->
    <item android:state_checked="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <size
                android:height="16dp"
                android:width="16dp" />

            <!--
            <gradient
                android:startColor="@color/blu"
                android:endColor="@color/bianco"
                android:type="radial"
                android:gradientRadius="50%p" />
            -->

            <solid
                android:color="@color/light_blue300" />

            <stroke
                android:width="2dp"
                android:color="@color/blue700" />

        </shape>
    </item>

    <!-- RadioButton unchecked -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <size
                android:height="16dp"
                android:width="16dp" />

            <!--
            <gradient
                android:startColor="@color/bianco"
                android:endColor="@color/blu"
                android:type="radial"
                android:gradientRadius="180%p"
                />
            -->

            <solid
                android:color="@color/white" />

            <stroke
                android:width="2dp"
                android:color="@color/blue500" />

        </shape>
    </item>

</selector>