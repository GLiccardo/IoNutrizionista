                    android:text="@string/text_view_mm"
                    android:textSize="@dimen/font_size_minuscolo"
                    android:textStyle="italic" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:paddingLeft="@dimen/padding_sx_elenco_misurazioni"
                    android:text="@string/text_view_circonferenza_polso"
                    android:textColor="@color/nero" />
                <EditText
                    android:id="@+id/edit_text_circonferenza_polso"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingTop="@dimen/padding_top_edit_text"
                    android:paddingBottom="@dimen/padding_bottom_edit_text"
                    android:inputType="number|numberDecimal"
                    android:textSize="@dimen/font_size_medio"
                    android:textStyle="italic"
                    android:gravity="right|end" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/text_view_cm"
                    android:textSize="@dimen/font_size_minuscolo"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:paddingLeft="@dimen/padding_sx_elenco_misurazioni"
                    android:text="@string/text_view_pliche_schiena"
                    android:textColor="@color/nero" />
                <EditText
                    android:id="@+id/edit_text_pliche_schiena"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingTop="@dimen/padding_top_edit_text"
                    android:paddingBottom="@dimen/padding_bottom_edit_text"
                    android:inputType="number"
                    android:textSize="@dimen/font_size_medio"
                    android:textStyle="italic"
                    android:gravity="right|end" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/text_view_mm"
                    android:textSize="@dimen/font_size_minuscolo"
                    android:textStyle="italic" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:paddingLeft="@dimen/padding_sx_elenco_misurazioni"
                    android:text="@string/text_view_circonferenza_braccio"
                    android:textColor="@color/nero" />
                <EditText
                    android:id="@+id/edit_text_circonferenza_braccio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingTop="@dimen/padding_top_edit_text"
                    android:paddingBottom="@dimen/padding_bottom_edit_text"
                    android:inputType="number|numberDecimal"
                    android:textSize="@dimen/font_size_medio"
                    android:textStyle="italic"
                    android:gravity="right|end" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/text_view_cm"
                    android:textSize="@dimen/font_size_minuscolo"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:paddingLeft="@dimen/padding_sx_elenco_misurazioni"
                    android:text="@string/text_view_pliche_braccio"
                    android:textColor="@color/nero" />
                <EditText
                    android:id="@+id/edit_text_pliche_braccio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingTop="@dimen/padding_top_edit_text"
                    android:paddingBottom="@dimen/padding_bottom_edit_text"
                    android:inputType="number"
                    android:textSize="@dimen/font_size_medio"
                    android:textStyle="italic"
                    android:gravity="right|end" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/text_view_mm"
                    android:textSize="@dimen/font_size_minuscolo"
                    android:textStyle="italic" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />
            </TableRow>

        </TableLayout>


    </RelativeLayout>

</ScrollView>