    <TableLayout
        android:id="@+id/table_layout_dati_anagrafici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_misurazioni"
        android:weightSum="10" >

        <!-- RIGA 1: Nome | EditText -->
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:text="@string/text_view_nome"
                android:textSize="@dimen/font_size_medio"
                android:textColor="#ff000000" />
            <EditText
                android:id="@+id/edit_text_nome"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="7.7"
                android:paddingTop="@dimen/padding_top_edit_text"
                android:paddingBottom="@dimen/padding_bottom_edit_text"
                android:inputType="textPersonName"
                android:hint="@string/hint_nome_paziente"
                android:textSize="@dimen/font_size_medio"
                android:ems="10"
                android:textStyle="italic" />
        </TableRow>

        <!-- RIGA 2: Cognome | EditText  -->
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:text="@string/text_view_cognome"
                android:textSize="@dimen/font_size_medio"
                android:textColor="#ff000000" />
            <EditText
                android:id="@+id/edit_text_cognome"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="7.7"
                android:paddingTop="@dimen/padding_top_edit_text"
                android:paddingBottom="@dimen/padding_bottom_edit_text"
                android:inputType="textPersonName"
                android:hint="@string/hint_cognome_paziente"
                android:textSize="@dimen/font_size_medio"
                android:ems="10"
                android:textStyle="italic" />
        </TableRow>

        <!-- RIGA 3: Sesso | Combobox | EtÃ  | Combobox -->
        <TableRow>
            <TextView
                android:text="@string/text_view_sesso"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingRight="10dp"
                android:textSize="@dimen/font_size_medio"
                android:textColor="#ff000000" />
            <Spinner
                android:id="@+id/spinner_sesso"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:background="@color/rosso"
                android:textSize="@dimen/font_size_medio" />
            <TextView
                android:text="@string/text_view_eta"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/font_size_medio"
                android:textColor="#ff000000" />
            <Button
                android:id="@+id/button_eta"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:onClick="showDatePickerDialog" />
        </TableRow>

    </TableLayout>


