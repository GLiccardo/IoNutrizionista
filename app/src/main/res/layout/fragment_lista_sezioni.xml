<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lista_sezioni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey300"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/lista_sezione_dati_anagrafici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/lista_sezioni_padding_vertical"
        android:paddingBottom="@dimen/lista_sezioni_padding_vertical" >

        <ImageView
            android:id="@+id/image_lista_dati_anagrafici"
            android:src="@mipmap/dati_anagrafici_lightblue500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


        <TextView
            android:id="@+id/text_view_lista_dati_anagrafici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:maxLines="1"
            android:text="@string/dati_paziente"
            android:textSize="@dimen/font_size_piccolo"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lista_sezione_misurazioni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/lista_sezioni_margin_vertical"
        android:paddingTop="@dimen/lista_sezioni_padding_vertical"
        android:paddingBottom="@dimen/lista_sezioni_padding_vertical" >

        <ImageView
            android:id="@+id/image_lista_misurazioni"
            android:src="@mipmap/misurazioni_greena400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_view_lista_misurazioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:maxLines="1"
            android:text="@string/misurazioni"
            android:textSize="@dimen/font_size_piccolo"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lista_sezione_risultati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/lista_sezioni_margin_vertical"
        android:paddingTop="@dimen/lista_sezioni_padding_vertical"
        android:paddingBottom="@dimen/lista_sezioni_padding_vertical" >

        <ImageView
            android:id="@+id/image_lista_risultati"
            android:src="@mipmap/risultati_red500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_view_lista_risultati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:maxLines="1"
            android:text="@string/risultati"
            android:textSize="@dimen/font_size_piccolo"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true" />

    </LinearLayout>

</LinearLayout>
